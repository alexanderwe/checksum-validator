{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es6", "es2015.promise", "es2017.object"],
    "outDir": "./app/main/build",
    "jsx": "react"
  },
  "exclude": ["./test/*", "./build"],
  "include": ["./app/main/src", "./app/renderer/src"]
}
